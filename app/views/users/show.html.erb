<div class="container">
	<div class="row mt-3">
		<div class="col-sm-4"></div>
		  <div class="col-sm-4">
				<%=image_tag(@user.avatar,class:'u_profile') if @user.avatar.attached?%>
				<h5 class="card-text txt"><%= @user.name  %></h5>
				<% if current_user.id == (@user.id).to_i %>
					<%= link_to "Edit", edit_user_path(@user),class:"btn btn-primary BTN"%>
					<%= link_to "Delete", user_path(@user.id), data: {turbo_method: :delete,turbo_confirm: "Are you sure?"}, class:"btn btn-danger" %>&nbsp;
					<%= link_to "Back",users_path,class:"btn btn-info"%>
				<% else %>
				  <%= link_to "Back",users_path,class:"btn btn-info u_backbtn"%>
				<% end %>
		   </div>
		   <div class="col-sm-4"></div>
		</div>
	</div>
<div class="container">
	<div class="row">
		<div class="col-sm-2"></div>
      <div class="col-sm-8">
	  <% if @user.articles.present?%>
      <% @user.articles.each do |u_article| %>
		  <div class="card mb-3">
	     <%#=image_tag(article.avatar) if article.avatar.attached?%>
	      <div class="card-body">
		       <h5 class="card-text"><%= u_article.title %></h5>
		       <p class="card-text"><%= h truncate(u_article.description, :length => 150)%></p>
		        <%= link_to "View",article_path(u_article),class:"btn btn-primary",style: "width: 150px;margin-left:20px;margin-bottom:20px;"%>&nbsp;
	      </div>
      </div>
      <% end %>
    <% else %>
      <h5 class="article_message">Article Not Present !</h5>
 	 <% end %>

    </div>
    <div class="col-sm-2"></div>
		</div>
</div>