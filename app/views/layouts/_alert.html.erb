<div class="container">
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
      <% if notice %>
        <div class="alert alert-info alert-dismissible fade show m-1 box" role="alert">
         <center> <%= notice %> </center>
        </div>
       <% end %>
      <% if alert %>
        <div class="alert alert-warning alert-dismissible fade show m-1 box" role="alert">
          <center><%= alert %></center>
        </div>
      <% end %>

    </div>
    <div class="col-sm-1"></div>
  </div>
</div>
<script type="text/javascript">
  setTimeout(function(){$('.box').fadeOut();},2000)
</script>