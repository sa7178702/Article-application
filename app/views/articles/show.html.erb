<div class="container">
	<div class="row mt-3">
		<div class="col-sm-2"></div>
		  <div class="col-sm-8">
				<%=image_tag(@article.avatar,class: "img") if @article.avatar.attached?%>
				<h5 class="card-text txt"><%= @article.title %></h5>
				<p class="card-text"><%= @article.description %></p>
				<% if current_user.id == (@article.user_id).to_i %>
					<%= link_to "Edit",edit_article_path(@article),class:"btn btn-primary BTN"%>
					<%= link_to "Delete",article_path(@article), data: {turbo_method: :delete,turbo_confirm: "Are you sure?"}, class:"btn btn-danger" %>&nbsp;
					<%= link_to "Back",articles_index_path,class:"btn btn-info"%>
				<% else %>
				     <%= link_to "Back",users_path,class:"btn btn-info"%>
				<% end %>
		   </div>
		   <div class="col-sm-2"></div>
		</div>
	</div>
</div>